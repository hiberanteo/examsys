<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping 
			PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.sanqing.po.Type" table="tb_type"><!-- 每个class对应一个持久化对象 -->
		<id name="id"><!-- id元素用来定义主键标识,并指定主键生成策略 -->
			<generator class="identity"></generator>
		</id>
		<property name="name"></property><!-- 映射name属性 -->
		<property name="description"></property><!-- 映射description属性 -->
	</class>	
</hibernate-mapping>